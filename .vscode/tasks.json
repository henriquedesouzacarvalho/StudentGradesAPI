{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/StudentGradesAPI.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/StudentGradesAPI.Tests/StudentGradesAPI.Tests.csproj",
        "--logger:trx"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test with coverage",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/StudentGradesAPI.Tests/StudentGradesAPI.Tests.csproj",
        "--collect:\"XPlat Code Coverage\"",
        "--logger:trx"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch tests",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--project",
        "${workspaceFolder}/StudentGradesAPI.Tests/StudentGradesAPI.Tests.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "${workspaceFolder}/StudentGradesAPI.sln"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}